<Window x:Class="TryImage.FolderAsk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TryImage"
        mc:Ignorable="d"
        Title="Folder" Height="450" Width="800" MinWidth="800" MaxWidth="800" MinHeight="450" MaxHeight="450" ResizeMode="NoResize">
    <Grid Background="#FF423535">
        <TextBox x:Name="TheFolder" HorizontalAlignment="Left" Height="27" Margin="150,200,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="448"/>
        <TextBlock x:Name="TheText" HorizontalAlignment="Left" Height="22" Margin="150,173,0,0" TextWrapping="Wrap" Text="Please insert a source folder" VerticalAlignment="Top" Width="500" Background="White"/>
        <Button x:Name="ButFold"  Content="..." HorizontalAlignment="Left" Height="27" Margin="603,200,0,0" VerticalAlignment="Top" Width="47" Click="ButFold_Click"/>
        <Button x:Name="ButOk" Content="OK" HorizontalAlignment="Left" Height="42" Margin="734,367,0,0" VerticalAlignment="Top" Width="48" Click="ButOk_Click" IsDefault="True"/>

    </Grid>
</Window>
